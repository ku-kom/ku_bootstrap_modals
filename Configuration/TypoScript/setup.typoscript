##############################################
####### CTYPE: KU SWIPERJS SLIDESHOW #########
##############################################

tt_content.ku_bootstrap_modals >
tt_content.ku_bootstrap_modals =< lib.contentElement
tt_content.ku_bootstrap_modals {

    ################
    ### TEMPLATE ###
    ################
    templateName = Modal
    templateRootPaths {
        10 = EXT:ku_bootstrap_modals/Resources/Private/Templates/
        20 = {$page.templates.templateRootPath}
    }
	partialRootPaths {
		10 = EXT:ku_bootstrap_modals/Resources/Private/Partials/
        20 = {$page.templates.partialRootPath}
	}

    layoutRootPaths {
        10 = EXT:ku_bootstrap_modals/Resources/Private/Layouts/
        20 = {$page.templates.layoutRootPath}
    }

    ##########################
    ### DATA PREPROCESSING ###
    ##########################
    dataProcessing {
        10 = TYPO3\CMS\Frontend\DataProcessing\FilesProcessor
        10 {
            references.fieldName = image
            as = image
        }
        20 = TYPO3\CMS\Frontend\DataProcessing\DatabaseQueryProcessor
        20 {
            if.isTrue.field = tx_ku_bootstrap_modals_content_elements
            table = tt_content
            uidInList.field = tx_ku_bootstrap_modals_content_elements
            pidInList = 0
            orderBy = sorting
            as = records
        }
    }
}

##########################
#### OPTION TO ADD CSS ###
##########################
lib.pagecss = TEXT
lib.pagecss {
    if.isTrue = {$page.assets.extraCss}
    value = {$page.assets.extraCss}
}

##########################
#### OPTION TO ADD JS ####
##########################
lib.pagejs = TEXT
lib.pagejs {
    if.isTrue = {$page.assets.extraJs}
    value = {$page.assets.extraJs}
}